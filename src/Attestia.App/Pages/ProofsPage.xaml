<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Attestia.App.Pages.ProofsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="Page_Loaded">

    <ScrollViewer>
        <StackPanel Padding="32,28,32,32" Spacing="20" MaxWidth="1100">
            <!-- Header -->
            <StackPanel Spacing="4">
                <TextBlock Text="Integrity" Style="{StaticResource AttestiaPageTitleStyle}" />
                <TextBlock Text="Verify that every event is hash-linked and reconciled."
                           FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <!-- Empty state (no root yet) -->
            <Grid x:Name="EmptyState" Visibility="Collapsed"
                  HorizontalAlignment="Center" Padding="0,32,0,0">
                <StackPanel Spacing="12" MaxWidth="420" HorizontalAlignment="Center">
                    <FontIcon Glyph="&#xE8D7;" FontSize="48"
                              Foreground="{ThemeResource TextFillColorTertiaryBrush}" HorizontalAlignment="Center" />
                    <TextBlock Text="No proofs available" FontSize="18" FontWeight="SemiBold"
                               HorizontalAlignment="Center" />
                    <TextBlock TextWrapping="Wrap" TextAlignment="Center" FontSize="13" LineHeight="20"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Text="The proof system builds a tamper-evident tree from all attestation records. Once you run a reconciliation and create an attestation, you can look up and verify individual proofs here." />
                </StackPanel>
            </Grid>

            <!-- Integrity Root card -->
            <Grid x:Name="RootCard" Padding="24" CornerRadius="8"
                  Background="{StaticResource AttestiaSurfaceCardBrush}"
                  BorderBrush="{StaticResource AttestiaDividerBrush}"
                  BorderThickness="1">
                <ToolTipService.ToolTip>
                    <ToolTip Content="The integrity root is a single hash representing all attestation records. If any record changes, this root changes too." />
                </ToolTipService.ToolTip>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Integrity Root"
                           FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <Border Grid.Row="0" Grid.Column="1" Padding="8,4" CornerRadius="4"
                        Background="{StaticResource AttestiaHashBackgroundBrush}">
                    <TextBlock x:Name="MerkleRootText" Text="—"
                               Style="{StaticResource AttestiaHashStyle}" />
                </Border>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Proof Entries" Margin="0,8,0,0"
                           FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LeafCountText" Text="—"
                           Margin="0,8,0,0" FontSize="20" Style="{StaticResource AttestiaNumericStyle}" HorizontalTextAlignment="Left" />

                <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Recalculate State"
                        Click="RefreshRoot_Click" Margin="0,12,0,0"
                        FontSize="12" Padding="8,4" />

                <TextBlock Grid.Row="3" Grid.ColumnSpan="2" Margin="0,8,0,0"
                           Text="This root is immutable. Any modification to the underlying data will produce a different hash."
                           FontSize="11" Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           TextWrapping="Wrap" FontStyle="Italic" />
            </Grid>

            <!-- Proof Lookup -->
            <StackPanel Spacing="8">
                <TextBlock Text="Attestation Proof Lookup" Style="{StaticResource AttestiaSectionHeadingStyle}" />
                <TextBlock Text="Why this matters: Each attestation generates a unique cryptographic proof. Verifying a proof confirms that the attestation record exists in the integrity tree and has not been tampered with since creation."
                           FontSize="11" Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           TextWrapping="Wrap" FontStyle="Italic" LineHeight="16" />
                <Grid Padding="20" CornerRadius="8"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Enter an attestation ID to look up its cryptographic proof."
                                   FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBox x:Name="LookupIdBox" PlaceholderText="Attestation ID" Width="300" />
                            <Button Content="Retrieve Proof" Click="Lookup_Click" />
                        </StackPanel>

                        <!-- Proof result -->
                        <StackPanel x:Name="ProofPanel" Visibility="Collapsed" Spacing="8">
                            <!-- Summary (always visible) -->
                            <Grid Padding="16" CornerRadius="6"
                                  Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Leaf Hash"
                                           FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <Border Grid.Row="0" Grid.Column="1" Padding="6,3" CornerRadius="4"
                                        Background="{StaticResource AttestiaHashBackgroundBrush}">
                                    <TextBlock x:Name="ProofLeafHash"
                                               Style="{StaticResource AttestiaHashStyle}"
                                               TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" />
                                </Border>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Root" Margin="0,4,0,0"
                                           FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <Border Grid.Row="1" Grid.Column="1" Margin="0,4,0,0" Padding="6,3" CornerRadius="4"
                                        Background="{StaticResource AttestiaHashBackgroundBrush}">
                                    <TextBlock x:Name="ProofRoot"
                                               Style="{StaticResource AttestiaHashStyle}"
                                               TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" />
                                </Border>
                            </Grid>

                            <!-- Cryptographic details (collapsed by default) -->
                            <ToggleButton x:Name="ShowCryptoDetailsToggle" Content="Show cryptographic details"
                                          FontSize="12" Padding="8,4"
                                          Checked="ShowCryptoDetails_Toggled" Unchecked="ShowCryptoDetails_Toggled" />

                            <Grid x:Name="CryptoDetailsPanel" Visibility="Collapsed"
                                  Padding="16" CornerRadius="6"
                                  Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Position"
                                           FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ProofLeafIndex" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Siblings" Margin="0,4,0,0"
                                           FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ProofSiblings" Margin="0,4,0,0"
                                           Style="{StaticResource AttestiaHashStyle}" />
                            </Grid>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="Verify Proof" Click="Verify_Click" />
                                <TextBlock x:Name="VerifyResultText" VerticalAlignment="Center"
                                           FontWeight="SemiBold" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Quick navigation -->
            <StackPanel x:Name="ProofsQuickNav" Spacing="8">
                <TextBlock Text="Continue your workflow" FontSize="14" FontWeight="SemiBold"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Generate Compliance Report" Click="GoToCompliance_Click"
                            FontSize="12" Padding="8,4" />
                    <Button Content="View Event Ledger" Click="GoToEvents_Click"
                            FontSize="12" Padding="8,4" />
                </StackPanel>
            </StackPanel>

            <!-- Loading / Error -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <ProgressRing x:Name="LoadingRing" IsActive="False" Width="20" Height="20" />
                <TextBlock x:Name="ErrorText" FontSize="13"
                           Foreground="{ThemeResource SystemFillColorCautionBrush}" VerticalAlignment="Center" />
                <Button x:Name="RetryBtn" Content="Reattempt Connection" Click="RefreshRoot_Click"
                        Visibility="Collapsed" FontSize="12" Padding="8,4" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
