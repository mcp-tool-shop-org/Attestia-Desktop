<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Attestia.App.Pages.ProofsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="Page_Loaded">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16">
            <!-- Header -->
            <TextBlock Text="Proofs" FontSize="28" FontWeight="SemiBold" />

            <!-- Merkle Root card -->
            <Grid Padding="16" CornerRadius="8"
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Merkle Root"
                           FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="MerkleRootText" Text="—"
                           FontFamily="Consolas" IsTextSelectionEnabled="True" TextWrapping="Wrap" />

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Leaf Count" Margin="0,8,0,0"
                           FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="LeafCountText" Text="—"
                           Margin="0,8,0,0" FontWeight="Bold" FontSize="20" />

                <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Refresh Merkle Root"
                        Click="RefreshRoot_Click" Margin="0,12,0,0" />
            </Grid>

            <!-- Proof Lookup -->
            <StackPanel Spacing="8">
                <TextBlock Text="Attestation Proof Lookup" FontSize="18" FontWeight="SemiBold" />
                <Grid Padding="16" CornerRadius="8"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBox x:Name="LookupIdBox" PlaceholderText="Attestation ID" Width="300" />
                            <Button Content="Lookup" Click="Lookup_Click" />
                        </StackPanel>

                        <!-- Proof result -->
                        <StackPanel x:Name="ProofPanel" Visibility="Collapsed" Spacing="8">
                            <Grid Padding="12" CornerRadius="6"
                                  Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Leaf Hash"
                                           FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="ProofLeafHash"
                                           FontFamily="Consolas" TextTrimming="CharacterEllipsis"
                                           IsTextSelectionEnabled="True" />

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Leaf Index" Margin="0,4,0,0"
                                           FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ProofLeafIndex" Margin="0,4,0,0" />

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Root" Margin="0,4,0,0"
                                           FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="ProofRoot" Margin="0,4,0,0"
                                           FontFamily="Consolas" TextTrimming="CharacterEllipsis"
                                           IsTextSelectionEnabled="True" />

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Siblings" Margin="0,4,0,0"
                                           FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="ProofSiblings" Margin="0,4,0,0"
                                           FontFamily="Consolas" TextWrapping="Wrap"
                                           IsTextSelectionEnabled="True" />
                            </Grid>

                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button Content="Verify Proof" Click="Verify_Click" />
                                <TextBlock x:Name="VerifyResultText" VerticalAlignment="Center"
                                           FontWeight="SemiBold" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Loading / Error -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <ProgressRing x:Name="LoadingRing" IsActive="False" Width="20" Height="20" />
                <TextBlock x:Name="ErrorText" Foreground="Red" VerticalAlignment="Center" />
                <Button x:Name="RetryBtn" Content="Retry" Click="RefreshRoot_Click" Visibility="Collapsed" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
