<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Attestia.App.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Padding="32,28,32,32" Spacing="20" MaxWidth="700">
            <!-- Header -->
            <StackPanel Spacing="4">
                <TextBlock Text="Settings" Style="{StaticResource AttestiaPageTitleStyle}" />
                <TextBlock Text="System configuration and attestation engine management."
                           FontSize="14" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <!-- Attestation Engine -->
            <StackPanel Spacing="8">
                <TextBlock Text="Attestation Engine" Style="{StaticResource AttestiaSectionHeadingStyle}" />
                <Grid Padding="20" CornerRadius="8"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1">
                    <StackPanel Spacing="12">
                        <TextBlock Text="The attestation engine runs in the background and processes all intents, reconciliations, and proofs."
                                   FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   TextWrapping="Wrap" LineHeight="20" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Status" FontSize="13"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <Ellipse x:Name="EngineIndicator" Width="8" Height="8" Fill="Gray"
                                         VerticalAlignment="Center" />
                                <TextBlock x:Name="SidecarStatusText" Text="Checking..." FontSize="13" />
                            </StackPanel>
                        </Grid>
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Restart Engine" Click="RestartSidecar_Click" />
                            <ProgressRing x:Name="SidecarLoading" IsActive="False" Width="20" Height="20" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Authentication -->
            <StackPanel Spacing="8">
                <TextBlock Text="Authentication" Style="{StaticResource AttestiaSectionHeadingStyle}" />
                <Grid Padding="20" CornerRadius="8"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Optional API key for authenticated access. Only needed when authentication is enabled on the attestation engine."
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontSize="13" TextWrapping="Wrap" LineHeight="20" />
                        <PasswordBox x:Name="ApiKeyBox" PlaceholderText="Enter API key" />
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- About & Build Signature -->
            <StackPanel Spacing="8">
                <TextBlock Text="About" Style="{StaticResource AttestiaSectionHeadingStyle}" />
                <Grid Padding="20" CornerRadius="8"
                      Background="{StaticResource AttestiaSurfaceCardBrush}"
                      BorderBrush="{StaticResource AttestiaDividerBrush}"
                      BorderThickness="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Application" FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="VersionText" Text="Attestia Desktop v0.1.0"
                               FontSize="13" FontWeight="SemiBold" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Protocol" Margin="0,8,0,0" FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Attestia Protocol v1" Margin="0,8,0,0"
                               FontSize="13" FontFamily="Cascadia Mono, Consolas" CharacterSpacing="-10" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Publisher" Margin="0,8,0,0" FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="mcp-tool-shop" Margin="0,8,0,0" FontSize="13" />

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Runtime" Margin="0,8,0,0" FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock Grid.Row="3" Grid.Column="1" Text=".NET 9 · WinUI 3 · MAUI" Margin="0,8,0,0"
                               FontSize="12" Foreground="{ThemeResource TextFillColorTertiaryBrush}" />

                    <TextBlock Grid.Row="4" Grid.ColumnSpan="2" Margin="0,12,0,0"
                               Text="Deterministic financial integrity infrastructure. Every attestation record is cryptographically anchored and independently verifiable."
                               FontSize="11" Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                               TextWrapping="Wrap" FontStyle="Italic" LineHeight="16" />
                </Grid>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
