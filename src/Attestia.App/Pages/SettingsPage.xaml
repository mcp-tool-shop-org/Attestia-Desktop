<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Attestia.App.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16" MaxWidth="700">
            <TextBlock Text="Settings" FontSize="28" FontWeight="SemiBold" />

            <!-- Sidecar Status -->
            <StackPanel Spacing="8">
                <TextBlock Text="Sidecar" FontSize="18" FontWeight="SemiBold" />
                <Grid Padding="16" CornerRadius="8"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Status"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="SidecarStatusText" Text="Unknown" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Port" Margin="0,8,0,0"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="PortText" Text="—" Margin="0,8,0,0" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="URL" Margin="0,8,0,0"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="UrlText" Text="—" Margin="0,8,0,0"
                               IsTextSelectionEnabled="True" />
                </Grid>
                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
                    <Button Content="Restart Sidecar" Click="RestartSidecar_Click" />
                    <ProgressRing x:Name="SidecarLoading" IsActive="False" Width="20" Height="20" />
                </StackPanel>
            </StackPanel>

            <!-- API Configuration -->
            <StackPanel Spacing="8">
                <TextBlock Text="API Configuration" FontSize="18" FontWeight="SemiBold" />
                <Grid Padding="16" CornerRadius="8"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1">
                    <StackPanel Spacing="8">
                        <TextBlock Text="API Key (optional — used when auth is enabled)"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   FontSize="12" />
                        <PasswordBox x:Name="ApiKeyBox" PlaceholderText="Enter API key" />
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- About -->
            <StackPanel Spacing="8">
                <TextBlock Text="About" FontSize="18" FontWeight="SemiBold" />
                <Grid Padding="16" CornerRadius="8"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Version"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="VersionText" Text="0.1.0-alpha" />

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Product" Margin="0,8,0,0"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Attestia Desktop" Margin="0,8,0,0" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Publisher" Margin="0,8,0,0"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="mcp-tool-shop-org" Margin="0,8,0,0" />
                </Grid>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
