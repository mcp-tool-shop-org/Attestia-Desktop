<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Attestia.App.Pages.CompliancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="Page_Loaded">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16">
            <!-- Header -->
            <TextBlock Text="Compliance" FontSize="28" FontWeight="SemiBold" />

            <!-- Framework selector -->
            <StackPanel Spacing="8">
                <TextBlock Text="Framework" FontSize="18" FontWeight="SemiBold" />
                <Grid Padding="16" CornerRadius="8"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1">
                    <StackPanel Spacing="8">
                        <ComboBox x:Name="FrameworkCombo" PlaceholderText="Select framework"
                                  Width="300" SelectionChanged="Framework_Changed" />
                        <Button Content="Generate Report" Click="GenerateReport_Click" />
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Report summary -->
            <StackPanel x:Name="ReportPanel" Visibility="Collapsed" Spacing="8">
                <TextBlock Text="Report" FontSize="18" FontWeight="SemiBold" />

                <!-- Score card -->
                <Grid Padding="16" CornerRadius="8"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1" ColumnSpacing="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Spacing="4">
                        <TextBlock Text="Score" FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock x:Name="ScoreText" Text="—" FontSize="32" FontWeight="Bold" />
                    </StackPanel>

                    <StackPanel Grid.Column="1" Spacing="4">
                        <TextBlock Text="Passed" FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock x:Name="PassedText" Text="—" FontSize="32" FontWeight="Bold" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" Spacing="4">
                        <TextBlock Text="Total Controls" FontSize="12"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock x:Name="TotalText" Text="—" FontSize="32" FontWeight="Bold" />
                    </StackPanel>
                </Grid>

                <!-- Control evaluations -->
                <ListView x:Name="EvaluationsList" SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="12" Margin="0,0,0,4"
                                  CornerRadius="6"
                                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                  BorderThickness="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Mapping.ControlId}" FontWeight="SemiBold" />
                                <Border Grid.Row="0" Grid.Column="1" Padding="6,2" CornerRadius="4"
                                        Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                                    <TextBlock Text="{Binding Mapping.Status}" FontSize="11" />
                                </Border>

                                <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Margin="0,4,0,0"
                                           Text="{Binding Mapping.ControlName}"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal"
                                            Spacing="8" Margin="0,4,0,0">
                                    <TextBlock FontSize="11" FontWeight="SemiBold"
                                               Text="{Binding Passed}" />
                                    <TextBlock FontSize="11" Text="{Binding EvidenceDetail}"
                                               TextTrimming="CharacterEllipsis"
                                               Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <!-- Loading / Error -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <ProgressRing x:Name="LoadingRing" IsActive="False" Width="20" Height="20" />
                <TextBlock x:Name="ErrorText" Foreground="Red" VerticalAlignment="Center" />
                <Button x:Name="RetryBtn" Content="Retry" Click="GenerateReport_Click" Visibility="Collapsed" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
