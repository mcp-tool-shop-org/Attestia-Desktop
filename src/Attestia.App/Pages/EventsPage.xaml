<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Attestia.App.Pages.EventsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Attestia.Core.Models"
    Loaded="Page_Loaded">

    <Grid Padding="24" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Events" FontSize="28" FontWeight="SemiBold" />
            <Button Grid.Column="1" Content="Export NDJSON" Click="Export_Click" Margin="0,0,8,0" />
            <Button Grid.Column="2" Content="Refresh" Click="Refresh_Click" />
        </Grid>

        <!-- Stream filter -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Stream:" VerticalAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            <TextBox x:Name="StreamFilterBox" PlaceholderText="All streams" Width="240" />
            <Button Content="Filter" Click="ApplyFilter_Click" />
        </StackPanel>

        <!-- Event list -->
        <ListView Grid.Row="2" x:Name="EventsList"
                  SelectionMode="None"
                  ItemsSource="{x:Bind ViewModel.Events, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:StoredEvent">
                    <Grid Padding="12" Margin="0,0,0,4"
                          CornerRadius="6"
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                          BorderThickness="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Event type + source badge -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{x:Bind Event.Type}" FontWeight="SemiBold" />
                            <Border Padding="6,2" CornerRadius="4"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}">
                                <TextBlock Text="{x:Bind Event.Metadata.Source}" FontSize="11"
                                           Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                            </Border>
                        </StackPanel>

                        <!-- Position -->
                        <TextBlock Grid.Row="0" Grid.Column="1"
                                   Text="{x:Bind GlobalPosition}" FontSize="11"
                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}" />

                        <!-- Stream + version -->
                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal"
                                    Spacing="12" Margin="0,4,0,0">
                            <TextBlock FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                <Run Text="Stream:" />
                                <Run Text="{x:Bind StreamId}" FontFamily="Consolas" />
                            </TextBlock>
                            <TextBlock FontSize="12"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                <Run Text="v" />
                                <Run Text="{x:Bind Version}" />
                            </TextBlock>
                        </StackPanel>

                        <!-- Timestamp + hash -->
                        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal"
                                    Spacing="12" Margin="0,2,0,0">
                            <TextBlock Text="{x:Bind AppendedAt}" FontSize="11"
                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                            <TextBlock Text="{x:Bind Hash}" FontSize="11" FontFamily="Consolas"
                                       TextTrimming="CharacterEllipsis" MaxWidth="280"
                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Load more / Status -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="12">
            <Button x:Name="LoadMoreBtn" Content="Load More" Click="LoadMore_Click"
                    Visibility="Collapsed" />
            <ProgressRing x:Name="LoadingRing" IsActive="False" Width="20" Height="20" />
            <TextBlock x:Name="ErrorText" Foreground="Red" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>
