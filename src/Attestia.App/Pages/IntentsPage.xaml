<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Attestia.App.Pages.IntentsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:Attestia.Core.Models"
    Loaded="Page_Loaded">

    <Grid Padding="24" RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Intents" FontSize="28" FontWeight="SemiBold" />
            <Button Grid.Column="1" Content="Refresh" Click="Refresh_Click" />
        </Grid>

        <!-- Status filter -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8">
            <TextBlock Text="Filter:" VerticalAlignment="Center"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            <ComboBox x:Name="StatusFilter" Width="160"
                      PlaceholderText="All statuses"
                      SelectionChanged="StatusFilter_Changed">
                <ComboBoxItem Content="All" Tag="" />
                <ComboBoxItem Content="Declared" Tag="declared" />
                <ComboBoxItem Content="Approved" Tag="approved" />
                <ComboBoxItem Content="Executed" Tag="executed" />
                <ComboBoxItem Content="Verified" Tag="verified" />
                <ComboBoxItem Content="Rejected" Tag="rejected" />
                <ComboBoxItem Content="Failed" Tag="failed" />
            </ComboBox>
        </StackPanel>

        <!-- Intent list -->
        <ListView Grid.Row="2" x:Name="IntentsList"
                  SelectionMode="None"
                  ItemsSource="{x:Bind ViewModel.Intents, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Intent">
                    <Grid Padding="12" Margin="0,0,0,4"
                          CornerRadius="6"
                          Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                          BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                          BorderThickness="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Intent ID + Kind -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="8">
                            <TextBlock Text="{x:Bind Id}" FontWeight="SemiBold" />
                            <Border Padding="6,2" CornerRadius="4"
                                    Background="{ThemeResource AccentFillColorDefaultBrush}">
                                <TextBlock Text="{x:Bind Kind}" FontSize="11"
                                           Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}" />
                            </Border>
                        </StackPanel>

                        <!-- Status badge -->
                        <Border Grid.Row="0" Grid.Column="1" Padding="8,2" CornerRadius="4"
                                Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                            <TextBlock Text="{x:Bind Status}" FontSize="11" />
                        </Border>

                        <!-- Description + timestamp -->
                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="0,4,0,0">
                            <TextBlock Text="{x:Bind Description}" TextTrimming="CharacterEllipsis"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                            <TextBlock Text="{x:Bind DeclaredAt}" FontSize="11"
                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}" />
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Load more / Status -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="12">
            <Button x:Name="LoadMoreBtn" Content="Load More" Click="LoadMore_Click"
                    Visibility="Collapsed" />
            <ProgressRing x:Name="LoadingRing" IsActive="False" Width="20" Height="20" />
            <TextBlock x:Name="ErrorText" Foreground="Red" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>
