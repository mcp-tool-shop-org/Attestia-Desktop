<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Attestia.App.Pages.IntentDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Padding="32,28,32,32" Spacing="20" MaxWidth="900">
            <!-- Back + header -->
            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Back" Click="Back_Click" />
                <FontIcon Glyph="&#xE8A1;" FontSize="22"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                          VerticalAlignment="Center" />
                <TextBlock Text="Intent Detail" Style="{StaticResource AttestiaPageTitleStyle}"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- Identity card -->
            <Grid Padding="20" CornerRadius="8"
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <Border Grid.Row="0" Grid.Column="1" Padding="6,3" CornerRadius="4"
                        Background="{StaticResource AttestiaHashBackgroundBrush}" HorizontalAlignment="Left">
                    <TextBlock x:Name="IntentIdText"
                               Style="{StaticResource AttestiaHashStyle}" />
                </Border>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Status" Margin="0,8,0,0"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <Border Grid.Row="1" Grid.Column="1" Margin="0,8,0,0"
                        Padding="8,2" CornerRadius="4" HorizontalAlignment="Left"
                        Background="{ThemeResource SubtleFillColorSecondaryBrush}">
                    <TextBlock x:Name="StatusText" FontWeight="SemiBold" />
                </Border>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Kind" Margin="0,8,0,0"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="KindText" Margin="0,8,0,0" />

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Declared By" Margin="0,8,0,0"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="DeclaredByText" Margin="0,8,0,0" />

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Declared At" Margin="0,8,0,0"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="DeclaredAtText" Margin="0,8,0,0" />
            </Grid>

            <!-- Description -->
            <Grid Padding="20" CornerRadius="8"
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1">
                <StackPanel Spacing="4">
                    <TextBlock Text="Description" FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock x:Name="DescriptionText" TextWrapping="Wrap" FontSize="13" />
                </StackPanel>
            </Grid>

            <!-- Params -->
            <Grid Padding="20" CornerRadius="8"
                  Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                  BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                  BorderThickness="1">
                <StackPanel Spacing="4">
                    <TextBlock Text="Parameters" FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                    <TextBlock x:Name="ParamsText" Style="{StaticResource AttestiaHashStyle}" />
                </StackPanel>
            </Grid>

            <!-- Lifecycle Actions (contextual) -->

            <!-- Approve / Reject (Declared) -->
            <StackPanel x:Name="ApproveRejectPanel" Visibility="Collapsed" Spacing="8">
                <TextBlock Text="Governance Decision" Style="{StaticResource AttestiaSectionHeadingStyle}" />
                <TextBlock Text="This intent requires human approval before execution."
                           FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock Text="Why this matters: Human-in-the-loop approval creates an immutable governance record. Auditors can verify that every financial action was explicitly authorized before execution."
                           FontSize="11" Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           TextWrapping="Wrap" FontStyle="Italic" LineHeight="16" />
                <Grid Padding="20" CornerRadius="8"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1">
                    <StackPanel Spacing="8">
                        <Button Content="Approve Intent" Click="Approve_Click"
                                Style="{ThemeResource AccentButtonStyle}" />
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <TextBox x:Name="RejectReasonBox" PlaceholderText="Reason for rejection"
                                     Width="300" />
                            <Button Content="Reject Intent" Click="Reject_Click" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Execute (Approved) -->
            <StackPanel x:Name="ExecutePanel" Visibility="Collapsed" Spacing="8">
                <TextBlock Text="Record Execution" Style="{StaticResource AttestiaSectionHeadingStyle}" />
                <TextBlock Text="Link this intent to an on-chain transaction to create an auditable record."
                           FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock Text="Why this matters: Linking the on-chain transaction to the declared intent creates a verifiable bridge between what was planned and what actually happened. This is the foundation of financial truth."
                           FontSize="11" Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           TextWrapping="Wrap" FontStyle="Italic" LineHeight="16" />
                <Grid Padding="20" CornerRadius="8"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1">
                    <StackPanel Spacing="8">
                        <TextBox x:Name="ChainIdBox" PlaceholderText="Chain ID"
                                 Header="Chain ID" Width="300" />
                        <TextBox x:Name="TxHashBox" PlaceholderText="Transaction Hash"
                                 Header="Transaction Hash" Width="400" />
                        <Button Content="Record as Executed" Click="Execute_Click"
                                Style="{ThemeResource AccentButtonStyle}" />
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Verify (Executed) -->
            <StackPanel x:Name="VerifyPanel" Visibility="Collapsed" Spacing="8">
                <TextBlock Text="Verification" Style="{StaticResource AttestiaSectionHeadingStyle}" />
                <TextBlock Text="Confirm that the on-chain execution matches the declared intent."
                           FontSize="13" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock Text="Why this matters: Verification closes the loop. It proves that the executed transaction corresponds exactly to the approved intent, completing the attestation lifecycle for this action."
                           FontSize="11" Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           TextWrapping="Wrap" FontStyle="Italic" LineHeight="16" />
                <Grid Padding="20" CornerRadius="8"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                      BorderThickness="1">
                    <StackPanel Spacing="8">
                        <CheckBox x:Name="MatchedCheck" Content="Transaction matches declared intent" IsChecked="True" />
                        <Button Content="Confirm Verification" Click="Verify_Click"
                                Style="{ThemeResource AccentButtonStyle}" />
                    </StackPanel>
                </Grid>
            </StackPanel>

            <!-- Action success banner -->
            <Grid x:Name="ActionSuccessBanner" Visibility="Collapsed" Padding="16" CornerRadius="8"
                  Background="{ThemeResource SystemFillColorSuccessBackgroundBrush}"
                  BorderBrush="{ThemeResource SystemFillColorSuccessBrush}"
                  BorderThickness="1">
                <StackPanel Spacing="4">
                    <TextBlock x:Name="ActionSuccessText" FontWeight="SemiBold" FontSize="13" />
                    <TextBlock x:Name="ActionNextStepText" FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Grid>

            <!-- Loading / Error -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <ProgressRing x:Name="LoadingRing" IsActive="False" Width="20" Height="20" />
                <TextBlock x:Name="ErrorText" FontSize="13"
                           Foreground="{ThemeResource SystemFillColorCautionBrush}" VerticalAlignment="Center" />
                <Button x:Name="RetryBtn" Content="Reattempt Connection" Click="Retry_Click"
                        Visibility="Collapsed" FontSize="12" Padding="8,4" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
