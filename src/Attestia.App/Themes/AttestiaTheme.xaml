<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Attestia Brand Colors — derived from logo palette -->

    <!-- Core Palette -->
    <Color x:Key="AttestiaPrimaryBackground">#FF2F3B4C</Color>
    <Color x:Key="AttestiaSurfaceCard">#FF364456</Color>
    <Color x:Key="AttestiaElevatedSurface">#FF3F4F63</Color>
    <Color x:Key="AttestiaPrimaryText">#FFF3F1EA</Color>
    <Color x:Key="AttestiaSecondaryText">#FFC9D1D9</Color>
    <Color x:Key="AttestiaDivider">#FF4A5A6F</Color>

    <!-- Status Colors — muted, institutional -->
    <Color x:Key="AttestiaHealthy">#FF4C7A5B</Color>
    <Color x:Key="AttestiaWarning">#FFC2A14A</Color>
    <Color x:Key="AttestiaError">#FFA85A5A</Color>
    <Color x:Key="AttestiaInfo">#FF5A7DA8</Color>

    <!-- Accent — muted gold for primary actions -->
    <Color x:Key="AttestiaAccent">#FFC2A14A</Color>
    <Color x:Key="AttestiaAccentHover">#FFD4B35C</Color>

    <!-- SolidColorBrush versions for direct binding -->
    <SolidColorBrush x:Key="AttestiaPrimaryBackgroundBrush" Color="{StaticResource AttestiaPrimaryBackground}" />
    <SolidColorBrush x:Key="AttestiaSurfaceCardBrush" Color="{StaticResource AttestiaSurfaceCard}" />
    <SolidColorBrush x:Key="AttestiaElevatedSurfaceBrush" Color="{StaticResource AttestiaElevatedSurface}" />
    <SolidColorBrush x:Key="AttestiaPrimaryTextBrush" Color="{StaticResource AttestiaPrimaryText}" />
    <SolidColorBrush x:Key="AttestiaSecondaryTextBrush" Color="{StaticResource AttestiaSecondaryText}" />
    <SolidColorBrush x:Key="AttestiaDividerBrush" Color="{StaticResource AttestiaDivider}" />
    <SolidColorBrush x:Key="AttestiaHealthyBrush" Color="{StaticResource AttestiaHealthy}" />
    <SolidColorBrush x:Key="AttestiaWarningBrush" Color="{StaticResource AttestiaWarning}" />
    <SolidColorBrush x:Key="AttestiaErrorBrush" Color="{StaticResource AttestiaError}" />
    <SolidColorBrush x:Key="AttestiaInfoBrush" Color="{StaticResource AttestiaInfo}" />
    <SolidColorBrush x:Key="AttestiaAccentBrush" Color="{StaticResource AttestiaAccent}" />
    <SolidColorBrush x:Key="AttestiaAccentHoverBrush" Color="{StaticResource AttestiaAccentHover}" />

    <!-- Pipeline stage colors -->
    <SolidColorBrush x:Key="PipelineIntentBrush" Color="{StaticResource AttestiaInfo}" />
    <SolidColorBrush x:Key="PipelineAttestedBrush" Color="{StaticResource AttestiaAccent}" />
    <SolidColorBrush x:Key="PipelineReconciledBrush" Color="{StaticResource AttestiaHealthy}" />
    <SolidColorBrush x:Key="PipelineProvenBrush" Color="#FF6A8FA8" />
    <SolidColorBrush x:Key="PipelineCompliantBrush" Color="#FF4C7A5B" />

    <!-- Cryptographic data background -->
    <SolidColorBrush x:Key="AttestiaHashBackgroundBrush" Color="#10C2A14A" />
    <SolidColorBrush x:Key="AttestiaVerifiedSealBrush" Color="#204C7A5B" />

    <!-- ══════════════════════════════════════════════════════════ -->
    <!-- 5.1 TYPOGRAPHY SYSTEM                                       -->
    <!-- Heading = institutional serif-adjacent (Cambria)             -->
    <!-- Body = clean sans-serif (Segoe UI)                           -->
    <!-- Data = precise monospace (Cascadia Mono, Consolas)           -->
    <!-- ══════════════════════════════════════════════════════════ -->

    <!-- Page title style: institutional serif heading -->
    <Style x:Key="AttestiaPageTitleStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Cambria" />
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="CharacterSpacing" Value="40" />
    </Style>

    <!-- Section heading style -->
    <Style x:Key="AttestiaSectionHeadingStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Cambria" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="CharacterSpacing" Value="30" />
    </Style>

    <!-- Hash / cryptographic data style -->
    <Style x:Key="AttestiaHashStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Cascadia Mono, Consolas" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="CharacterSpacing" Value="-10" />
        <Setter Property="IsTextSelectionEnabled" Value="True" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Numeric data style (tabular figures) -->
    <Style x:Key="AttestiaNumericStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="HorizontalTextAlignment" Value="Right" />
    </Style>

    <!-- Page subtitle style -->
    <Style x:Key="AttestiaSubtitleStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
    </Style>

    <!-- Tertiary / italic annotation style -->
    <Style x:Key="AttestiaAnnotationStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontStyle" Value="Italic" />
        <Setter Property="LineHeight" Value="16" />
    </Style>

    <!-- Label style (card labels, field names) -->
    <Style x:Key="AttestiaLabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
    </Style>

    <!-- ══════════════════════════════════════════════════════════ -->
    <!-- 5.2 MOTION: Implicit animations via Storyboards             -->
    <!-- ══════════════════════════════════════════════════════════ -->

    <Storyboard x:Key="FadeInStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1" Duration="0:0:0.2">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <Storyboard x:Key="IntegrityConfirmedStoryboard">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0" To="1" Duration="0:0:0.35">
            <DoubleAnimation.EasingFunction>
                <CubicEase EasingMode="EaseOut" />
            </DoubleAnimation.EasingFunction>
        </DoubleAnimation>
    </Storyboard>

    <!-- ══════════════════════════════════════════════════════════ -->
    <!-- 5.3 ELEVATION: Card styles with subtle depth                -->
    <!-- ══════════════════════════════════════════════════════════ -->

    <Style x:Key="AttestiaCardStyle" TargetType="Grid">
        <Setter Property="Padding" Value="20" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}" />
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- Elevated card (for primary data like integrity anchor) -->
    <Style x:Key="AttestiaElevatedCardStyle" TargetType="Grid">
        <Setter Property="Padding" Value="24" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Background" Value="{StaticResource AttestiaSurfaceCardBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource AttestiaDividerBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

</ResourceDictionary>
